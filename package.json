{
  "name": "Electron",
  "version": "1.0.0",
  "description": "Electron Webpack starter",
  "main": "electron.js",
  "scripts": {
    "build:dev": "rimraf dist && webpack -d --progress --config config/webpack.dev.js",
    "build:prod": "rimraf dist && webpack -p --progress --config config/webpack.prod.js",
    "start": "webpack-dev-server -d --progress --config config/webpack.dev.js",
    "test": "karma start config/karma.conf.js",
    "pree2e": "webdriver-manager update --standalone false --gecko false --quiet",
    "e2e": "protractor config/protractor.conf.js",
    "tslint": "tslint -p tsconfig.json -t verbose ./src/**/*.ts",
    "electron:dev": "npm run build:dev && electron ./dist/electron.js",
    "electron:prod": "npm run build:prod && electron ./dist/electron.js",
    "package:windows": "npm run build:prod && npx electron-builder build --windows",
    "package:linux": "npm run build:prod && npx electron-builder build --linux",
    "package:mac": "npm run build:prod && npx electron-builder build --mac"
  },
  "author": "Iulian Stan",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^6.1.6",
    "@angular/core": "^6.1.6",
    "@angular/platform-browser": "^6.1.6",
    "@angular/platform-browser-dynamic": "^6.1.6",
    "core-js": "^2.5.7",
    "rxjs": "^6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/compiler": "^6.1.6",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "^2.0.3",
    "@types/webpack-env": "^1.13.6",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^5.2.0",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.1",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jasmine": "^3.2.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "node-sass": "^4.9.3",
    "protractor": "^5.4.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4"
  }
}
